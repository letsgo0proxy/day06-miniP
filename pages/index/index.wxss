.inning-container {
  box-sizing: border-box;
  position: relative;
  width: 580rpx;
  /* margin: 0 30rpx; */
  /* min-height: 550rpx; */
  /* width: fit-content; */
  min-height: fit-content;
  margin: 40rpx 0rpx;
  /* margin: 0; */
  padding: 40rpx 50rpx;
  /* z-index: 999; */
  background-color: #ffa927;
  /* background-color: black; */
  border: 4rpx solid #ffd670;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.top {
  position: absolute;
  /* top 值可能需要适应 */
  box-sizing: border-box;
  top: -4rpx;
  left: 0;
  width: 100%;
  height: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  z-index: 2;
}

.top>.top-circle {
  box-sizing: border-box;
  height: 10rpx;
  width: 25rpx;
  background-color: #fff3d4;
  /* border-radius: 100%; */
  border: 4rpx solid #ffd670;
  border-top-width: 0;
  border-radius: 0 0 25rpx 25rpx;
  z-index: 2;
}

.bottom {
  position: absolute;
  box-sizing: border-box;
  bottom: -15rpx;
  left: 0;
  width: 100%;
  height: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  z-index: 2;
}

.bottom>.bot-circle {
  box-sizing: border-box;
  height: 10rpx;
  width: 25rpx;
  background-color: #ffe3a0;
  /* border-radius: 100%; */
  border: 4rpx solid #ffd670;
  border-bottom-width: 0;
  border-radius: 25rpx 25rpx 0 0;
}

.horizontal,
.vertical {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
}

.horizontal {
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.vertical {
  flex-direction: row;
  justify-content: space-around;
}

.vertical>.v-line {
  width: 0;
  height: 100%;
  box-sizing: border-box;
  border: 1px solid #ffb959;
  z-index: 1;
  /* background-blend-mode: ; */
}

.horizontal>.h-line {
  height: 0;
  width: 100%;
  border: 1px solid #ffb959;
}

.inning-content {
  position: relative;
  box-sizing: border-box;
  width: 100%;
  margin: 0rpx;
  z-index: 999;
  display: flex;
  align-items: center;
  flex-direction: column;
  /* background-color: red; */
  padding: 0 10rpx;
}

.inning-title,
.inning-task,
.inning-member-title {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.inning-title view:nth-child(1),
.inning-task view:nth-child(1),
.inning-member-title view:nth-child(1) {
  width: 12rpx;
  height: 12rpx;
  background-color: red;
  border-radius: 100%;
  margin-right: 10rpx;
}

.inning-content>.inning-title-input {
  box-sizing: border-box;
  background-color: #ffe8b2;
  height: 65rpx;
  width: 100%;
  text-align: center;
  margin: 15rpx 0;
  padding: 10rpx 15rpx 15rpx;
  line-height: 1.7;
  /* background-color: red; */
  border: 1px solid #ff9400;
  border-radius: 25rpx;
}

.inning-content .inning-task {
  margin-top: 10rpx;
  margin-bottom: 15rpx;
}

.inning-content textarea {
  box-sizing: border-box;
  width: 100%;
  height: 230rpx;
  overflow-y: auto;
  background-color: #ffe8b2;
  text-align: center;
  padding: 10rpx;
  border: 1px solid #ff9400;
  border-radius: 9rpx;
  margin-bottom: 40rpx;
}

