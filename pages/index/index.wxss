.dialog {
  display: none;
  position: fixed;
  box-sizing: border-box;
  width: 100%;
  height: auto;
  padding: 50rpx 0rpx;
  top: 45%;
  background-color: white;
  color: black;
  align-items: center;
  justify-content: space-between;
  z-index: 999;
  flex-direction: column;
  box-shadow: 0 2rpx 4rpx yellow;
}

.dialog>view {
  margin: 0 0 80rpx 0;
}

.test-tools {
  background-color: black;
  display: flex;
