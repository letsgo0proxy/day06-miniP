  padding: 0;
  z-index: -999;
}

.horn {
  position: absolute;
  left: 0;
  top: 475rpx;
  width: 140rpx;
  z-index: 999;
  /* visibility: hidden; */
}

.task-inning {
  /* background-image: linear-gradient(#fff3d4, #ffe29d); */
  box-sizing: border-box;
  position: relative;
  top: 480rpx;
  height: 757rpx;
  left: 0rpx;
  width: 653rpx;
  margin: 0 30rpx;
  background-color: transparent;
  /* background-color: black; */
  display: flex;
  align-items: center;
  flex-direction: column;
  /* justify-content: center; */
}

.inning-bg-attach {
  background-color: #ffb934;
  /* background-color: black; */
  position: absolute;
  left: -47rpx;
  top: 7rpx;
  width: 48rpx;
  height: 68rpx;
